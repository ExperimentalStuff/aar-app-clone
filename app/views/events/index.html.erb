
<div class="row">
<div class="col-sm-12 ">

<div class="clearafix">
  <div class="pull-right">
    <%= link_to("New Event", new_event_path, :class => "btn btn-default btn-primary") %>
  </div>

</div>

<br> <br>
<div class="clearafix">

<%= grid(@events_grid) do |g|

  g.column do |event|
    event.id
  end

  g.column do |event|
    render_event_name(event)
  end

  g.column do |event|
    event.user.name
  end

  g.column do |event|
    event.created_at
  end


  g.column do |event|
    link_to("Edit", edit_event_path(event)) 
  end

  g.column do |event|
    link_to("Destroy", event_path(event), :method => :delete) 
  end

end -%>

</div>

  </div>
</div>