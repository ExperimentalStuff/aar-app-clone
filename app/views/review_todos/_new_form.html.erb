
<div class="modal-dialog">
  <div class="modal-content">


    <div class="modal-body" >

      <div class="group">


        <%= simple_form_for [@review, @todo ] do |f| %>
        <%= f.input :subject %>
        <%= f.input :content, :label => "Content ( support Markdown syntax) ", :input_html => { :rows => 10, :data => { :provide => "markdown"} } %>
        <%= f.submit "Submit", :disable_with => 'Submiting...', :class => "btn pull-right" %>
        <% end %>

      </div>

    </div>
  </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
